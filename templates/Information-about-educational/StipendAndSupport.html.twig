{% extends 'main_page/index.html.twig' %}

{% block main %}
    <h1 class="label-contactPod">Стипендии и меры поддержки обучающихся</h1>

    <p class="label-contactPod"><a href="">Информация о стипендиях и иных видах поддержки обучающихся ГБПОУ КМТ</a></p>
<div class="label-contactPod">
     {% for pageCont in pageData %}
        {% if pageCont is not empty %}
            <p>{{pageCont.text|raw}}</p>
        {% endif %}
    {% endfor %}
</div>
<div class="label-contactPod">
    <p></p>
</div>
<div class="contactPod-table">
    <table class="table">
        <thead>
        {% for pageCont in pageData %}
        {% if pageCont is not empty %}
            <tr>
            
                <th colspan="4"><p align="center">Выпускники&nbsp;{{pageCont.graduates|raw}}&nbsp;год</p></th>
                <th colspan="7"><p align="center">Каналы занятости выпускников на&nbsp;{{ pageCont.graduateEmployment|date('d.m.Y')|raw }}</p></th>
                
            </tr>
            {% endif %}
            {% endfor %}
            <tr>
                <th rowspan="2">
                    <p align="center">Всего</p>
                </th>
                <th colspan="3">
                    <p align="center">В том числе</p>
                </th>
                <th colspan="2">
                    <p align="center">Фактическое трудоустройство</p>
                </th>
                <th colspan="3">
			        <p align="center">Продолжат обучение</p>
			    </th>
                <th rowspan="2">
			        <p align="center">Призваны в ВС РФ</p>
			    </th>
                <th rowspan="2">
			        <p align="center">Присвоен статус безработного в ДТиЗ</p>
			    </th>
            </tr>
            <tr>
                <th>
                    <p align="center">Юношей</p>
                </th>
                <th>
                    <p align="center">Девушек</p>
                </th>
                <th>
                    <p align="center">Лица с ОВЗ</p>
                </th>
                <th>
                    <p align="center">Всего</p>
                </th>
                <th>
                    <p align="center">Из них по профилю</p>
                </th>
                <th>
                    <p align="center">ВУЗ</p>
                </th>
                <th>
                    <p align="center">ПССЗ(СПО)</p>
                </th>
                <th>
                    <p align="center">Другое</p>
                </th>
		</tr>
        </thead>
        <tbody>
        {% set arr = 0 %}
    {% for pageCont in pageData %}
        {% if pageCont is not empty %}
        {% set arr = arr + pageCont.boys + pageCont.girls + pageCont.ovz + pageCont.actualEmployment + pageCont.actualEmploymentProf + pageCont.continueEduVyz + pageCont.continueEduSpo + pageCont.other + pageCont.vsRf + pageCont.dtiz %}
            <tr>
                <td>
                <p align="center">{{arr}}</p>
                </td>
                <td>
                <p align="center">{{pageCont.boys}}</p>
                </td>
                <td>
                <p align="center">{{pageCont.girls}}</p>
                </td>
                <td>
                <p align="center">{{pageCont.ovz}}</p>
                </td>
                <td>
                <p align="center">{{pageCont.actualEmployment}}</p>
                </td>
                <td>
                <p align="center">{{pageCont.actualEmploymentProf}}</p>
                </td>
                <td>
                <p align="center">{{pageCont.continueEduVyz}}</p>
                </td>
                <td>
                <p align="center">{{pageCont.continueEduSpo}}</p>
                </td>
                <td>
                <p align="center">{{pageCont.other}}</p>
                </td>
                <td>
                <p align="center">{{pageCont.vsRf}}</p>
                </td>
                <td>
                <p align="center">{{pageCont.dtiz}}</p>
                </td>
            </tr>
        {% endif %}
    {% endfor %}
	</tbody>
    </table>
</div>
{% endblock %}